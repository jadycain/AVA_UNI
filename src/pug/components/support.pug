- var t = importi18nJSON(LANG)

section#support.pt-14(class='sm:pt-20 lg:pt-[130px]')
  .px-4(class='xl:container')
    .-mx-4.flex.flex-wrap.justify-center
      .w-full.px-4(class='xl:w-10/12')
        .flex.flex-wrap.items-center.border-b.pb-14(class='dark:border-[#2E333D] lg:pb-0')
          .w-full.px-4(class='lg:w-1/2')
            // Section Title
            .wow.fadeInUp.relative.mb-12.pt-6(class='max-w-[500px] md:mb-14 lg:pt-16', data-wow-delay='.2s')
              span.title(class='!left-0 !translate-x-0')
                | CONTACT
              h2.mb-5.font-heading.text-3xl.font-semibold.text-dark(class='dark:text-white sm:text-4xl md:text-[50px] md:leading-[60px]')(lang='en')
                =t["support"].title
              //- p.text-base.text-dark-text
              //-   =t["support"].content
          .w-full.px-4(class='lg:w-1/2')
            .wow.fadeInUp.flex.items-center(data-wow-delay='.2s')
              span.mr-10.h-1.w-full.bg-dark(class='max-w-[200px] dark:bg-white')
              a.inner-en-font.text-xl.text-dark(href='mailto:service@avauni.com', class='dark:text-white md:text-3xl lg:text-xl xl:text-3xl')
                | service@avauni.com
        .wow.fadeInUp.-mx-4.flex.flex-wrap.pt-12(data-wow-delay='.2s')
          .w-full.px-4(class='md:w-1/2 lg:w-1/4')
            .mb-6
              h3.mb-2.font-heading.text-base.text-dark(class='dark:text-white sm:text-xl')
                 =t["support"].email
              p.text-base.font-medium.text-dark-text
                | service@avauni.com
          .w-full.px-4(class='md:w-1/2 lg:w-1/4')
            .mb-6
              h3.mb-2.font-heading.text-base.text-dark(class='dark:text-white sm:text-xl')
                 =t["support"].phone
              p.text-base.font-medium.text-dark-text
                | +852 2323 3488
          .w-full.px-4(class='md:w-1/2 lg:w-1/4')
            .mb-6
              h3.mb-2.font-heading.text-base.text-dark(class='dark:text-white sm:text-xl')
                =t["support"].office
              p.text-base.font-medium.text-dark-text
                =t["support"].address
    div#form.mx-auto(class='max-w-[780px] pt-[130px]')
      form.wow.fadeInUp(data-wow-delay='.2s', action='https://formbold.com/s/unique_form_id', method='POST')
        .-mx-4.flex.flex-wrap
          .w-full.px-4(class='sm:w-1/2')
            .mb-12
              label.mb-3.block.font-heading.text-base.text-dark(for='name', class='dark:text-white')
                | Your Name
              input#name.w-full.border-b.bg-transparent.py-5.text-base.font-medium.text-dark.placeholder-dark-text.outline-none(type='text', name='name', placeholder='Full Name', class='focus:border-primary dark:border-[#2C3443] dark:text-white dark:focus:border-white')
          .w-full.px-4(class='sm:w-1/2')
            .mb-12
              label.mb-3.block.font-heading.text-base.text-dark(for='email', class='dark:text-white')
                | Email Address
              input#email.w-full.border-b.bg-transparent.py-5.text-base.font-medium.text-dark.placeholder-dark-text.outline-none(type='email', name='email', placeholder='Email Address', class='focus:border-primary dark:border-[#2C3443] dark:text-white dark:focus:border-white')
          .w-full.px-4(class='sm:w-1/2')
            .mb-12
              label.mb-3.block.font-heading.text-base.text-dark(for='phone', class='dark:text-white')
                | Phone (Optional)
              input#phone.w-full.border-b.bg-transparent.py-5.text-base.font-medium.text-dark.placeholder-dark-text.outline-none(type='text', name='phone', placeholder='Phone Number', class='focus:border-primary dark:border-[#2C3443] dark:text-white dark:focus:border-white')
          .w-full.px-4(class='sm:w-1/2')
            .mb-12
              label.mb-3.block.font-heading.text-base.text-dark(for='subject', class='dark:text-white')
                | Subject
              input#subject.w-full.border-b.bg-transparent.py-5.text-base.font-medium.text-dark.placeholder-dark-text.outline-none(type='text', name='subject', placeholder='Type Subject', class='focus:border-primary dark:border-[#2C3443] dark:text-white dark:focus:border-white')
          .w-full.px-4
            .mb-10
              label.mb-3.block.font-heading.text-base.text-dark(for='message', class='dark:text-white')
                | Message
              textarea#message.w-full.resize-none.border-b.bg-transparent.py-5.text-base.font-medium.text-dark.placeholder-dark-text.outline-none(rows='4', name='message', placeholder='Type Message', class='focus:border-primary dark:border-[#2C3443] dark:text-white dark:focus:border-white')
